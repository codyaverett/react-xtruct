const defaultState = {
    counter: 0
};

export default function homeReducer(state = defaultState, action) {
    switch (action.type) {
        case 'INCREASE':
            state = Object.assign({}, state, {counter: state.counter + action.count});
            return state;
        case 'DECREASE':
            state = Object.assign({}, state, {counter: state.counter - action.count});
            return state;
        default:
            return state;
    }
}
